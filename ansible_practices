devops@ansible-controller:~$



- name: cond
  hosts: all
  become: yes
  become_user: root
  vars:
    pckgname: vim
  tasks:
    - name: "install a {{pckgname}} on Ubuntu"
      when: ansible_distribution == "Ubuntu"
      apt:
        update_cache: yes
        name: "{{pckgname}}"
        state: present
    - name: "install a {{pckgname}} on Centos"
      when: ansible_distribution == "Centos"
      yum:
        update_cache: yes
        name: "{{pckgname}}"
        state: present

